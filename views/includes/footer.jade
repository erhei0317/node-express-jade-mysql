#dialog1.weui_dialog_confirm
   .weui_mask
   .weui_dialog
      .weui_dialog_hd
         strong.weui_dialog_title#dialog1title 提示
      .weui_dialog_bd#dialog1body 自定义弹窗内容，居左对齐显示，告知需要确认的信息等
      .weui_dialog_ft
         a.weui_btn_dialog.default(href='javascript:;')#dialog1cancel 取消
         a.weui_btn_dialog.primary(href='javascript:;')#dialog1ok 确定

#dialog2.weui_dialog_alert
   .weui_mask
   .weui_dialog
      .weui_dialog_hd
         strong.weui_dialog_title#dialog2title 提示
      .weui_dialog_bd#dialog2body 弹窗内容，告知当前页面信息等
      .weui_dialog_ft
         a.weui_btn_dialog.primary(href='javascript:;')#dialog2ok 确定

#toast(style='display: none;')
   .weui_mask_transparent
   .weui_toast
