extends ../../layout

block content
  .weui_cells.weui_cells_form
    .weui_cell
      .weui_cell_hd
        label.weui_label 级别名称
      .weui_cell_bd.weui_cell_primary
        input.weui_input(type='text', placeholder='请输入级别名称')
    .weui_cell.weui_cell_select
      .weui_cell_bd.weui_cell_primary
        select.weui_select(name='select1')
          option(selected='', value='1') 奢悦水光针
          option(value='2') 奢悦面膜
          option(value='3') 奢悦溶脂针
    .weui_cell
      .weui_cell_hd
        label.weui_label 级别价格
      .weui_cell_bd.weui_cell_primary
        input.weui_input(type='number', pattern='[0-9]*', placeholder='请输入级别价格')
  .weui_btn_area
    button#showTooltips.weui_btn.weui_btn_primary 保存
    button.weui_btn.weui_btn_warn 取消

  script(src='/js/level.js' type='text/javascript')
