extends ../../layout
block content

  .weui_cells.weui_cells_form
      .weui_cell.weui_cell_select
          .weui_cell_bd.weui_cell_primary
              select.weui_select(name='product', id='product')
                  option(selected='', value='0') 请选择产品
                  each product in products
                    option(value='#{product.name}') #{product.name}
      .weui_cell
          .weui_cell_hd
              label.weui_label 数量
          .weui_cell_bd.weui_cell_primary
              input.weui_input(type='number', pattern="[0-9]*", placeholder='请输入数量', name='count', id='count')
      .weui_cell
          .weui_cell_hd
              label.weui_label 进货单价
          .weui_cell_bd.weui_cell_primary
              input.weui_input(type='number', pattern="[0-9]*", placeholder='请输入进货单价', name='price', id='price')
      .weui_cell
        .weui_cell_bd.weui_cell_primary
          p 按进货单价算得总额
        .weui_cell_ft ￥4545
      .weui_cell
        .weui_cell_hd
          label.weui_label 实际成交总额
        .weui_cell_bd.weui_cell_primary
          input.weui_input(type='number', pattern="[0-9]*", placeholder='请输入实际成交总额', name='realPrice', id='realPrice')
      .weui_cell
          .weui_cell_hd
              label.weui_label 已付款
          .weui_cell_bd.weui_cell_primary
              input.weui_input(type='number', pattern="[0-9]*", placeholder='请输入已付款', name='payment', id='payment')
  .weui_btn_area
      button#add.weui_btn.weui_btn_primary(type='button') 保存
      button.weui_btn.weui_btn_warn(type='button' onclick='history.go(-1);') 取消

  script(src='/js/dealIn.js' type='text/javascript')
                      