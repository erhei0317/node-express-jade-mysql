doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1,user-scalable=0')
    title #{title || '操作成功'}
    link(rel='stylesheet', href='/libs/weui/dist/style/weui.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body(ontouchstart="")
    include ../includes/header
    .container
      .msg
        .weui_msg
          .weui_icon_area
            i.weui_icon_success.weui_icon_msg
          .weui_text_area
            h2.weui_msg_title #{title || '操作成功'}
            p.weui_msg_desc #{msg||'操作成功'}
          .weui_opr_area
            p.weui_btn_area
              a.weui_btn.weui_btn_primary(href='#{backUrl || "/"}') 确定
              //- a.weui_btn.weui_btn_default(href='javascript:;') 取消
